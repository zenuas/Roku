###
関数外のレキシカルスコープの変数をキャプチャする

struct $scope
	var a: Int
	var b: String

var scope = $scope();
scope.a = 1
scope.b = "hello"

sub f(_scope: $scope)
	g.bind(_scope)()

sub g(_scope: $scope)
	print(_scope.a)
	print(_scope.b)

f.bind(scope)()
